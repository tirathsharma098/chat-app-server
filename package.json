{
  "name": "chat-app-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ts-node app.ts",
    "dev": "nodemon app.ts",
    "start:server": "node build/app.js",
    "start:windows": "set NODE_ENV=production&& ts-node app.ts",
    "start:ubuntu": "NODE_ENV=production ts-node app.ts",
    "seed:admin": "ts-node ./src/seeds/admin.ts",
    "seed:permission": "ts-node ./src/seeds/permissions.ts",
    "seed:adminjs": "node ./build/src/seeds/admin.js",
    "dev:build": "NODE_ENV=development tsc",
    "prod:build": "NODE_ENV=production tsc",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli",
    "migration:create": "npm run typeorm:cli -- migration:create ./src/database/migration/createdMigration",
    "migration:generate": "npm run typeorm:cli -- -d ./src/database/config.ts migration:generate ./src/database/migration/generatedMigration",
    "migration:run": "npx typeorm-ts-node-commonjs -d ./src/database/config.ts migration:run",
    "migration:revert": "npm run typeorm:cli -- -d ./src/database/config.ts migration:revert"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "celebrate": "^15.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "eslint-config-prettier": "^9.1.0",
    "express": "^4.18.2",
    "express-jwt": "^8.4.1",
    "helmet": "^7.1.0",
    "http-status": "^1.7.3",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "socket.io": "^4.7.2",
    "ts-node": "^10.9.1",
    "typeorm": "^0.3.17"
  }
}
